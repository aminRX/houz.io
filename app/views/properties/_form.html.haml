.row
  .col-md-12
    -if @property.errors.any?
      .alert.alert-danger
        %h3= "#{pluralize(@property.errors.count, "error")} prohibited this property from being saved:"
        %ul
          - @property.errors.full_messages.each do |msg|
            %li= msg
    = form_for @property, :html => {:role => 'form', :class => 'property_form'} do |f|
      .panel.panel-primary
        .panel-heading 
          %h4 Property Details
        .panel-body     
          .form-group
            = f.label :unit_type, 'Property Type'
            = f.select :unit_type, Property.utypes, {}, :class => 'form-control'
          .form-group
            = f.label :name
            = f.text_field :name, :class => 'form-control', :placeholder => 'e.g. "Rocky Point Blue House"'
          .form-group
            = f.label :description
            = f.text_area :description, :class => 'form-control'            
          .panel.panel-default#rental_details
            .panel-heading 
              %strong Rental details
            .panel-body
              .row
                .col-md-3
                  .form-group.time_select_group              
                    = f.label :check_in
                    %br
                    = f.time_select :check_in, {minute_step: 15, ampm: true, :include_minutes => false, :default => Time.now.change(:hour => 12), :simple_time_select => true}, {:class => 'form-control' }
                .col-md-3.time_select_group
                  = f.label :check_out
                  %br
                  = f.time_select :check_out, {minute_step: 15, ampm: true, :include_minutes => false, :default => Time.now.change(:hour => 11, :min => 15)}, {:class => 'form-control' }
                .col-md-3
                  = f.label :minimum_days, 'Minimum rental days'
                  = f.text_field :minimum_days, :class => 'form-control'
                .col-md-3    
                  = f.label :property_size
                  .input-group
                    = f.text_field :property_size, :class => 'form-control'
                    %span.input-group-addon SQ M.
              .row
                .col-md-3
                  = f.label :num_persons_allowed
                  = f.text_field :num_persons_allowed, :class => 'form-control'
                .col-md-3
                  .checkbox
                    %label
                      = f.check_box :pets_allowed
                      Pets allowed
                .col-md-3
                .col-md-3
          .panel.panel-default#rental_details
            .panel-heading 
              %strong Location
            .panel-body                
              = f.fields_for :contact do |c|
                = c.fields_for :addresses do |a|
                  .row
                    .col-md-3
                      = a.label :country
                      = a.text_field :country, :class => 'form-control'                          
                    .col-md-3
                      = a.label :city
                      = a.text_field :city, :class => 'form-control'   
                    .col-md-3
                      = a.label :state
                      = a.text_field :state, :class => 'form-control'   
                    .col-md-3
                      = a.label :zip_code
                      = a.text_field :zip_code, :class => 'form-control'   


      .pull-right
        %button{:type => 'submit', :class =>"btn btn-success btn-lg"}
          %span.glyphicon.glyphicon-floppy-disk
          Save
        = link_to 'Cancel', :back, :class => 'btn btn-lg'