.page-header
  %h2 
    New Property    
  %hr
  .row
    .col-md-12
      -if @property.errors.any?
        .alert.alert-danger
          %h2= "#{pluralize(@property.errors.count, "error")} prohibited this job from being saved:"
          %ul
            - @property.errors.full_messages.each do |msg|
              %li= msg
      = form_for @property, :html => { :role => 'form'} do |f|
        .panel.panel-success
          .panel-heading 
            %h4 Property Details
          .panel-body     
            .form-group
              = f.label :unit_type, 'Property Type'
              = f.select :unit_type, Property.utypes, {}, :class => 'form-control'
            .form-group
              = f.label :name
              = f.text_field :name, :class => 'form-control', :placeholder => 'e.g. "Rocky Point Blue House"'
            .form-group
              = f.label :description
              = f.text_area :description, :class => 'form-control'            
            .panel.panel-default#rental_details
              .panel-heading 
                %strong Rental details
              .panel-body
                .row
                  .col-md-3
                    .form-group.time_select_group              
                      = f.label :check_in
                      %br
                      = f.time_select :check_in, {minute_step: 15, ampm: true, :include_minutes => false, :default => '12:00'}, {:class => 'form-control' }
                  .col-md-3.time_select_group
                    = f.label :check_out
                    %br
                    = f.time_select :check_out, {minute_step: 15, ampm: true, :include_minutes => false}, {:class => 'form-control' }
                  .col-md-3
                    = f.label :minimum_days, 'Minimum rental days'
                    = f.text_field :minimum_days, :class => 'form-control'
                  .col-md-3    
                    = f.label :property_size
                    .input-group
                      = f.text_field :property_size, :class => 'form-control'
                      %span.input-group-addon SQ M.
                .row
                  .col-md-3
                    = f.label :num_persons_allowed
                    = f.text_field :num_persons_allowed, :class => 'form-control'
                  .col-md-3
                    .checkbox
                      %label
                        = f.check_box :pets_allowed
                        Pets allowed
                  .col-md-3
                  .col-md-3
        .pull-right
          %button{:type => 'submit', :class =>"btn btn-success btn-lg"}
            %span.glyphicon.glyphicon-floppy-disk
            Save
          = link_to 'Cancel', :back, :class => 'btn btn-lg'
