= render 'head'
.panel.panel-success
  .panel-heading 
    %h4 Rates
  .panel-body
    .col-md-3
    .col-md-6
      = form_tag rates_property_path(@property), :method => :put do
        .row
          .col-xs-2 
            %center 
              %strong Type
          .col-xs-6 
            %center 
              %strong Name
          .col-xs-4 
            %center 
              %strong Value
        .row
          %hr
        - @property.rates.each do |r|
          .row.ratelns{:id => "r_#{r.id}"}
            .col-xs-2
              %center= r.type.to_s.humanize
            .col-xs-6
              %center= link_to r.name, ''
            .col-xs-4 
              .input-group
                %span.input-group-addon= r.value_type.eql?(:percentage) ? " % " : " $ "
                = text_field_tag "rates[#{r.id}]", r.value, :class => 'form-control'                
        .row
          %hr
        .row
          .col-xs-8
            - if request.method.eql? 'POST'
              %small.text-muted Successfully saved.
          .col-xs-4
            = submit_tag 'Save', :class => 'btn btn-lg btn-success col-xs-12'            
    .col-md-3
    