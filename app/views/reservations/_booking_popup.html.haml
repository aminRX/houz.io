#inquiery_booking.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  = form_tag '', :id => 'inquiery_booking_form', :role => 'form' do |f|
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
          %h4#myModalLabel.modal-title New Reservation
        .modal-body    
          .row
            .col-md-12
              .form-group
                = label_tag :property                    
                = select_tag :property_id, options_for_select(account_properties_select_options), :class => 'form-control'      
          .row#date_range_icon
            .col-md-6
              .form-group            
                = label_tag :check_in, 'Arrival'  
                .input-group                 
                  = text_field_tag :check_in, '', :class => 'form-control'
                  %a.input-group-addon{:trigger => :check_in, :href => '#'}
                    %span.glyphicon.glyphicon-calendar
            .col-md-6
              = label_tag :check_out , 'Departure'
              .input-group                
                = text_field_tag :check_out, '', :class => 'form-control'
                %a.input-group-addon{:trigger => :check_out, :href => '#'}
                  %span.glyphicon.glyphicon-calendar
          .row
            .col-md-6
              .form-group
                = label_tag :staying
                .input-group                
                  = text_field_tag :staying, '', :class => 'form-control'
                  %span.input-group-addon Nights                      
          %hr/
          %h4 Booking Details
          .alert.alert-warning#booking_info
            %p Please choose arrival and departure dates.
        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
          %button.btn.btn-warning{type: "button"} Book